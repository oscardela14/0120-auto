{
    "manifest_version": 3,
    "name": "Social Auto AI Connector",
    "version": "1.0",
    "description": "Connects Localhost Content Studio to Naver Blog for automated publishing.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://blog.naver.com/*",
        "https://blog.editor.naver.com/*",
        "http://localhost:5173/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://localhost:5173/*",
                "http://127.0.0.1:5173/*"
            ],
            "js": [
                "content-localhost.js"
            ]
        },
        {
            "matches": [
                "https://blog.naver.com/*",
                "https://blog.editor.naver.com/*",
                "https://section.blog.naver.com/*",
                "https://www.naver.com/*"
            ],
            "js": [
                "content-naver.js"
            ],
            "run_at": "document_idle"
        }
    ]
}